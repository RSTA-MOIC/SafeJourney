<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bt.gov.rsta.safejourney.SplashScreen">


    <ImageView
        android:id="@+id/imgView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/imgView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rstalogo"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imgView2"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/safejourney"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imgView3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo"
        android:layout_alignTop="@+id/imgView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imgView4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="122dp"
        android:src="@drawable/logo1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="@string/an_initiative_by"
        android:layout_above="@+id/imgView3"
        android:layout_toStartOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:text="@string/developed_by_students_of"
        android:layout_above="@+id/imgView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="325dp"
        android:layout_height="25dp"
        android:layout_marginTop="47dp"
        android:text="@string/for_safe_efficient"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/imgView3"
        android:layout_alignStart="@+id/textView1" />

</RelativeLayout>