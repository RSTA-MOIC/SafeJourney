<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="501dp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="3dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:text="@string/emergency"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/rowFire"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/fire" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/bone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fire \nBrigade"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:fontFamily="Calibri (Body)"
                    tools:textStyle="italic"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:fontFamily="Calibri (Body)"
                    tools:textStyle="italic"
                    android:layout_margin="20dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/rowAmb"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/ambulance" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/ambulance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambulance"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:fontFamily="Calibri (Body)"
                    tools:textStyle="italic"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="112"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:fontFamily="Calibri (Body)"
                    tools:textStyle="italic"
                    android:layout_margin="20dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/rowPolice"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/police" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/firefighter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Police"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:fontFamily="Calibri (Body)"
                    tools:textStyle="italic"
                    android:layout_marginTop="0dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="113"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:fontFamily="Calibri (Body)"
                    tools:textStyle="italic"
                    android:layout_margin="20dp"/>
            </TableRow>


        </TableLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
