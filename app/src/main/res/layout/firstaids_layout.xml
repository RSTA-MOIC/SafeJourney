<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <TableLayout
            android:id="@+id/frame_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/bone2"
                    android:contentDescription=""
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/buttonBone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="1dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="Calibri (Body)"
                    android:text="@string/bones_and_nfracture"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textColor="#000"
                    android:textSize="30sp"
                    tools:textStyle="italic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/burn"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/buttonBurn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="Calibri (Body)"
                    android:text="@string/burn_and_n_scalds"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textColor="#000"
                    android:textSize="30sp"
                    tools:textStyle="italic" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/cpr"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/buttonArtificial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="Calibri (Body)"
                    android:text="@string/artificial_n_respiration"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textColor="#000"
                    android:textSize="30sp"
                    tools:textStyle="italic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/cut"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/buttonCuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="Calibri (Body)"
                    android:text="@string/cuts_and_n_wounds"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textColor="#000"
                    android:textSize="30sp"
                    tools:textStyle="italic" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/dizzy"
                    tools:ignore="ContentDescription" />


                <Button
                    android:id="@+id/buttonFaint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="Calibri (Body)"
                    android:text="@string/fainting"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textColor="#000"
                    android:textSize="30sp"
                    tools:textStyle="italic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/food"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/buttonFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="Calibri (Body)"
                    android:text="@string/food_npoisoning"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textColor="#000"
                    android:textSize="30sp"
                    tools:textStyle="italic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/stroke"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/buttonstroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="Calibri (Body)"
                    android:text="@string/heatstroke"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textColor="#000"
                    android:textSize="30sp"
                    tools:textStyle="italic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="20dp"
                    android:background="#f3ff3300"
                    app:srcCompat="@drawable/drown"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/buttonDrown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="Calibri (Body)"
                    android:text="@string/drowning"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Widget.PopupMenu.Large"
                    android:textColor="#000"
                    android:textSize="30sp"
                    tools:textStyle="italic" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
